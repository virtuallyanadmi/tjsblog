---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Giscus from '../../components/Giscus.astro';
import { getAllPosts, getPostBySlug, urlFor } from '../../lib/sanity';
import { formatDate, getCategoryIcon } from '../../lib/utils';
import { renderPortableText } from '../../lib/portableText';

// Generate static paths for all posts
export async function getStaticPaths() {
  try {
    const posts = await getAllPosts();
    return posts.map((post: any) => ({
      params: { slug: post.slug.current },
    }));
  } catch (error) {
    console.log('Sanity not configured');
    return [];
  }
}

const { slug } = Astro.params;

let post: any = null;
try {
  post = await getPostBySlug(slug as string);
} catch (error) {
  console.log('Post not found');
}

if (!post) {
  return Astro.redirect('/blog');
}

const imageUrl = post.mainImage 
  ? urlFor(post.mainImage).width(1200).height(630).url() 
  : '/placeholder-blog.svg';

const bodyHtml = post.body ? renderPortableText(post.body) : '';
---

<BaseLayout 
  title={`${post.title} - Jonathan Stewart`}
  description={post.excerpt}
  image={imageUrl}
  type="article"
>
  <article>
    <!-- Hero -->
    <header class="bg-gray-50 dark:bg-gray-800/50 py-12 md:py-20 transition-colors duration-200">
      <div class="container-custom blog-width max-w-4xl">
        <!-- Categories -->
        {post.categories && post.categories.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-6 justify-center">
            {post.categories.map((category: any) => (
              <a 
                href={`/blog?category=${category.slug.current}`}
                class:list={['badge', `badge-${category.color || 'blue'}`, 'hover:opacity-80 transition-opacity']}
              >
                {getCategoryIcon(category.icon)} {category.title}
              </a>
            ))}
          </div>
        )}

        <!-- Title -->
        <h1 class="text-3xl md:text-5xl font-display font-bold text-gray-900 dark:text-white mb-6 text-center text-balance transition-colors duration-200">
          {post.title}
        </h1>

        <!-- Excerpt -->
        {post.excerpt && (
          <p class="text-xl text-gray-600 dark:text-gray-400 text-center max-w-3xl mx-auto mb-8 transition-colors duration-200">
            {post.excerpt}
          </p>
        )}

        <!-- Meta -->
        <div class="flex items-center justify-center space-x-4 text-gray-600 dark:text-gray-400 transition-colors duration-200">
          {post.author && (
            <div class="flex items-center space-x-2">
              {post.author.image && (
                <img 
                  src={urlFor(post.author.image).width(48).height(48).url()} 
                  alt={post.author.name}
                  class="w-10 h-10 rounded-full"
                />
              )}
              <span class="font-medium">{post.author.name}</span>
            </div>
          )}
          <span>â€¢</span>
          {post.publishedAt && (
            <time datetime={post.publishedAt}>
              {formatDate(post.publishedAt)}
            </time>
          )}
        </div>
      </div>
    </header>

    <!-- Featured Image -->
    {post.mainImage && (
      <div class="container-custom blog-width max-w-4xl -mt-4 mb-12">
        <img 
          src={imageUrl}
          alt={post.mainImage.alt || post.title}
          class="w-full rounded-xl shadow-lg"
        />
      </div>
    )}

    <!-- Content -->
    <div class="container-custom blog-width max-w-3xl pb-16">
      <div class="prose max-w-none" set:html={bodyHtml} />
    </div>

    <!-- Author Bio -->
    {post.author && (
      <section class="bg-gray-50 dark:bg-gray-800/50 py-12 transition-colors duration-200">
        <div class="container-custom blog-width max-w-3xl">
          <div class="flex flex-col md:flex-row items-center md:items-start gap-6 p-6 bg-white dark:bg-gray-800 rounded-xl border border-gray-100 dark:border-gray-700 transition-colors duration-200">
            {post.author.image && (
              <img 
                src={urlFor(post.author.image).width(120).height(120).url()} 
                alt={post.author.name}
                class="w-24 h-24 rounded-full"
              />
            )}
            <div class="text-center md:text-left">
              <h3 class="text-lg font-bold text-gray-900 dark:text-white transition-colors duration-200">About {post.author.name}</h3>
              {post.author.title && (
                <p class="text-primary-600 dark:text-primary-400 mb-2 transition-colors duration-200">{post.author.title}</p>
              )}
              {post.author.bio && (
                <p class="text-gray-600 dark:text-gray-400 transition-colors duration-200">
                  {post.author.bio[0]?.children?.[0]?.text || ''}
                </p>
              )}
              <div class="flex gap-3 mt-4 justify-center md:justify-start">
                {post.author.linkedin && (
                  <a href={post.author.linkedin} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                  </a>
                )}
                {post.author.twitter && (
                  <a href={post.author.twitter} target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                    </svg>
                  </a>
                )}
              </div>
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- Comments Section -->
    <div class="container-custom blog-width max-w-3xl">
      <Giscus />
    </div>

    <!-- Back to Blog -->
    <div class="container-custom blog-width max-w-3xl py-8">
      <a 
        href="/blog" 
        class="inline-flex items-center text-primary-600 dark:text-primary-400 font-medium hover:text-primary-700 dark:hover:text-primary-300 transition-colors"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Blog
      </a>
    </div>
  </article>
</BaseLayout>
