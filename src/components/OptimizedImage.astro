---
interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  quality?: number;
  className?: string;
  loading?: 'lazy' | 'eager';
}

const { src, alt, width, height, quality = 80, className = '', loading = 'lazy' } = Astro.props;
---

<img 
  src={src} 
  alt={alt}
  width={width}
  height={height}
  loading={loading}
  class={`rounded-lg w-full max-w-2xl mx-auto ${className}`}
/>