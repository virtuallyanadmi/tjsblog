---
import BlogCard from './BlogCard.astro';

interface Post {
  _id: string;
  title: string;
  slug: { current: string };
  excerpt?: string;
  publishedAt?: string;
  mainImage?: any;
  categories?: any[];
  author?: any;
  featured?: boolean;
}

interface Props {
  posts: Post[];
  title?: string;
  showViewAll?: boolean;
}

const { posts, title = "Recent Posts", showViewAll = true } = Astro.props;
---

<section class="py-16 md:py-24 transition-colors duration-200">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="flex flex-col md:flex-row md:items-end md:justify-between mb-12">
      <div>
        <h2 class="section-heading">{title}</h2>
        <p class="section-subheading">
          Insights on cloud, AI, and leadership
        </p>
      </div>
      {showViewAll && (
        <a 
          href="/blog" 
          class="mt-4 md:mt-0 text-primary-600 dark:text-primary-400 font-medium hover:text-primary-700 dark:hover:text-primary-300 inline-flex items-center group"
        >
          View all posts
          <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      )}
    </div>

    <!-- Posts Grid -->
    {posts && posts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
          <BlogCard {...post} />
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-gray-500 dark:text-gray-400">No posts yet. Check back soon!</p>
      </div>
    )}
  </div>
</section>
